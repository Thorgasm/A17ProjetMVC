@model IEnumerable<A17ProjetMVC.Models.Objet>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "ObjetsDispo";
}

<h2>@A17ProjetMVC.Resources.site.AvaibleObjects</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomObjet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categorie.Nom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomObjet)
        </td>
        <td>
            @Html.DisplayFor(i => item.Categorie.Nom)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ObjetID }) |
            @if (item.UserID != User.Identity.GetUserId())
            {
                @Html.ActionLink(A17ProjetMVC.Resources.site.Borrow, "Emprunt", new { id = item.ObjetID })
            }
        </td>
    </tr>
}

</table>
